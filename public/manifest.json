{
    "manifest_version": 3,
    "name": "MarkPilot",
    "version": "1.3.0",
    "description": "AI-Powered Chrome Bookmark Manager with VS Code Style Interface",
    "icons": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icon16.png",
            "48": "icon48.png"
        },
        "default_title": "Add to MarkPilot"
    },
    "background": {
        "service_worker": "background.js",
        "type": "module"
    },
    "chrome_url_overrides": {
        "newtab": "index.html"
    },
    "permissions": [
        "bookmarks",
        "favicon",
        "storage",
        "activeTab",
        "tabs",
        "notifications",
        "alarms"
    ],
    "host_permissions": [
        "https://api.openai.com/*",
        "https://api.anthropic.com/*",
        "*://*/*"
    ],
    "content_security_policy": {
        "extension_pages": "script-src 'self'; object-src 'self'"
    }
}
